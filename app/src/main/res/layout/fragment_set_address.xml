<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blanco"
    android:orientation="vertical">

    <!-- Scrollable Item above footer -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/fragment_search_advanced_button_search">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <com.itosoftware.inderandroid.graphicstest.FontTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/TitleSize"
                android:textColor="@color/NegroTransparente70"
                android:text="Dirección"
                android:layout_marginTop="50dp"
                />
            <Button
                android:id="@+id/fragment_set_address_close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="-30dp"
                android:layout_marginBottom="10dp"
                android:text="×"
                android:textSize="40dp"
                android:textColor="@color/NegroTransparente70"
                android:background="@drawable/rounded_close_button"
                style="@style/ButtonStyle"
                />
            <LinearLayout
                android:id="@+id/fragment_set_address_row_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_set_address_close_button"
                android:orientation="horizontal"
                android:background="@color/Gris"
                android:paddingBottom="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">
                <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text="Tipo de Calle Principal"
                    android:layout_weight="2"
                    android:textSize="@dimen/SubtitleSize"
                    />
                <Spinner
                    android:layout_marginTop="10dp"
                    android:id="@+id/fragment_set_address_main_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@drawable/spinner"
                    android:padding="10dp"
                    ></Spinner>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fragment_set_address_group_one"
                android:layout_width="match_parent"
                android:layout_below="@+id/fragment_set_address_row_one"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:layout_marginBottom="20dp"
                android:background="@color/Gris"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/fragment_set_address_row_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_set_address_row_one">
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Número de calle principal"
                        android:layout_weight="2"
                        android:padding="5dp"
                        android:textSize="@dimen/SubtitleSize"
                        />
                    <com.itosoftware.inderandroid.graphicstest.FontEditText
                        android:layout_marginTop="10dp"
                        android:id="@+id/fragment_set_address_number_street_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Número calle principal"
                        android:layout_marginRight="5dp"
                        android:padding="10dp"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:imeOptions="actionNone"
                        android:background="@drawable/rounded_stroke"
                        android:textSize="@dimen/ContentSize"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_set_address_row_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_set_address_row_two">
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="Letra de calle principal"
                        android:layout_weight="2"
                        android:textSize="@dimen/SubtitleSize"
                        />
                    <Spinner
                        android:layout_marginTop="10dp"
                        android:id="@+id/fragment_set_address_letter_main_street"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner"
                        android:gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        ></Spinner>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_set_address_row_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_set_address_group_one"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="Coordenada calle principal"
                        android:layout_weight="2"
                        android:textSize="@dimen/SubtitleSize"
                        />
                    <Spinner
                        android:layout_marginTop="10dp"
                        android:id="@+id/fragment_set_address_coordinate_main_street"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner"
                        android:gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        ></Spinner>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fragment_set_address_group_two"
                android:layout_width="match_parent"
                android:layout_below="@+id/fragment_set_address_group_one"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:layout_marginBottom="20dp"
                android:background="@color/Gris"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/fragment_set_address_row_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Número de calle secundaria"
                        android:layout_weight="2"
                        android:padding="5dp"
                        android:textSize="@dimen/SubtitleSize"
                        />
                    <com.itosoftware.inderandroid.graphicstest.FontEditText
                        android:layout_marginTop="10dp"
                        android:id="@+id/fragment_set_address_number_street_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Número calle secundaria"
                        android:layout_marginRight="5dp"
                        android:padding="10dp"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:imeOptions="actionNone"
                        android:background="@drawable/rounded_stroke"
                        android:textSize="@dimen/ContentSize"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_set_address_row_six"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_set_address_row_five">
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="Letra de calle secundaria"
                        android:layout_weight="2"
                        android:textSize="@dimen/SubtitleSize"
                        />
                    <Spinner
                        android:layout_marginTop="10dp"
                        android:id="@+id/fragment_set_address_letter_second_street"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner"
                        android:gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        ></Spinner>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_set_address_row_seven"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_set_address_row_six"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="Coordenada calle secundaria"
                        android:layout_weight="2"
                        android:textSize="@dimen/SubtitleSize"
                        />
                    <Spinner
                        android:layout_marginTop="10dp"
                        android:id="@+id/fragment_set_address_coordinate_second_street"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner"
                        android:gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        ></Spinner>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fragment_set_address_group_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_set_address_group_two"
                android:orientation="horizontal"
                android:background="@color/Gris"
                android:paddingBottom="10dp"
                android:layout_marginBottom="20dp">
                <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text="Número de la Casa"
                    android:layout_weight="2"
                    android:textSize="@dimen/SubtitleSize"
                    />
                <com.itosoftware.inderandroid.graphicstest.FontEditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/fragment_set_address_home_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:hint="Número de la casa"
                    android:inputType="number"
                    android:imeOptions="actionNone"
                    android:background="@drawable/rounded_stroke"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:textSize="@dimen/ContentSize"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fragment_set_address_group_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_set_address_group_three"
                android:orientation="horizontal"
                android:background="@color/Gris"
                android:paddingBottom="10dp"
                android:layout_marginBottom="20dp">
                <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text="Complemento o nombre de vereda"
                    android:layout_weight="2"
                    android:textSize="@dimen/SubtitleSize"
                    />
                <com.itosoftware.inderandroid.graphicstest.FontEditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/fragment_set_address_complement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:hint="Complemento o vereda"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:background="@drawable/rounded_stroke"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:textSize="@dimen/ContentSize"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fragment_set_address_group_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_set_address_group_four"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">
                <com.itosoftware.inderandroid.graphicstest.FontButton
                    android:id="@+id/fragment_set_address_button_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancelar"
                    android:background="@drawable/rounded"
                    android:padding="10dp"
                    android:layout_marginRight="5dp"
                    android:textSize="@dimen/ContentSize"
                    />
                <com.itosoftware.inderandroid.graphicstest.FontButton
                    android:id="@+id/fragment_set_address_button_done"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Aceptar"
                    android:background="@drawable/rounded"
                    android:layout_marginLeft="5dp"
                    android:padding="10dp"
                    android:textSize="@dimen/ContentSize"
                    />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>