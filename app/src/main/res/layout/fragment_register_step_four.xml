<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blanco">

    <!-- Scrollable Item above footer -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/fragment_register_four_row_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="50dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingBottom="20dp"
                android:background="@color/Blanco">

                <RelativeLayout
                    android:id="@+id/circle_white_number_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_green"
                    android:gravity="center_horizontal"
                    android:clickable="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img_number_three"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="15dp"
                        android:src="@drawable/number_4" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/divider_register"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/divider_register"
                android:layout_below="@id/fragment_register_four_row_one"/>

            <RelativeLayout
                android:id="@+id/content_register_rows"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/divider_register">

                <LinearLayout
                    android:id="@+id/fragment_register_four_row_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/step_four_username"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <com.itosoftware.inderandroid.graphicstest.FontEditText
                        android:id="@+id/fragment_register_four_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="@string/step_four_username"
                        android:imeOptions="actionNext"
                        android:layout_weight="1"
                        android:maxLength="20"
                        android:background="@drawable/rounded_stroke"
                        android:padding="10dp"
                        android:textSize="@dimen/ContentSize"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_four_row_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_register_four_row_two">

                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/step_four_password"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <com.itosoftware.inderandroid.graphicstest.FontEditText
                        android:id="@+id/fragment_register_four_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:inputType="textPassword"
                        android:hint="@string/step_four_password"
                        android:imeOptions="actionNext"
                        android:maxLength="20"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_stroke"
                        android:padding="10dp"
                        android:textSize="@dimen/ContentSize"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_four_row_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_register_four_row_three">

                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/step_four_repeat_password"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <com.itosoftware.inderandroid.graphicstest.FontEditText
                        android:id="@+id/fragment_register_four_repeat_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:inputType="textPassword"
                        android:hint="@string/step_four_repeat_password"
                        android:imeOptions="actionNext"
                        android:layout_weight="1"
                        android:maxLength="20"
                        android:background="@drawable/rounded_stroke"
                        android:padding="10dp"
                        android:textSize="@dimen/ContentSize"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_four_row_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_register_four_row_four">

                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/step_four_mail"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"/>

                    <com.itosoftware.inderandroid.graphicstest.FontEditText
                        android:id="@+id/fragment_register_four_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fragment_register_four_repeat_password"
                        android:gravity="center"
                        android:inputType="textEmailAddress"
                        android:hint="@string/step_four_mail"
                        android:maxLength="50"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_stroke"
                        android:padding="10dp"
                        android:textSize="@dimen/ContentSize"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_four_row_six"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_register_four_row_five">

                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Recibir Boletines Inder"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"/>

                    <Spinner
                        android:id="@+id/fragment_register_four_newsletters"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner"
                        android:padding="10dp"
                        ></Spinner>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_four_row_seven"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_register_four_row_six"
                    android:paddingTop="30dp"
                    android:layout_marginBottom="25dp">

                    <com.itosoftware.inderandroid.graphicstest.FontButton
                        android:id="@+id/fragment_register_four_button_terms_conditions"
                        android:text="@string/button_terms_conditions"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rounded"
                        android:padding="10dp"
                        android:textSize="@dimen/ContentSize"
                         />

                    <com.itosoftware.inderandroid.graphicstest.FontCheckbox
                        android:id="@+id/fragment_register_four_terms_conditions"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/accept_terms_conditions"
                        android:gravity="center"
                        android:textSize="@dimen/DateSize"
                        />
                </LinearLayout>
                <Button
                    android:id="@+id/fragment_register_four_button_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/fragment_register_four_row_seven"
                    android:text="Registrarme"
                    android:background="@drawable/rounded_verde"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/Blanco"
                    android:textSize="@dimen/TitleSize"/>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/fragment_register_four_progress_bar"
        android:background="@drawable/progress_animation"
        android:layout_width="50dp"
        android:layout_centerInParent="true"
        android:layout_height="50dp" />
</RelativeLayout>