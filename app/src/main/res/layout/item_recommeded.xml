<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@color/GrisTransparente">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/item_recomended_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/progress_animation"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true" />

        <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
            android:id="@+id/item_recomended_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:lines="2"
            android:maxLines="2"
            android:gravity="center"
            android:textSize="@dimen/DateSize" />

    </LinearLayout>
</LinearLayout>