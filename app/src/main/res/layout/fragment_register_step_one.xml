<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blanco">

    <!-- Footer aligned to bottom -->

    <!-- Scrollable Item above footer -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/fragment_register_one_row_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="50dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="20dp"
                android:background="@color/Blanco"
                android:orientation="horizontal">

                <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:text="@string/step_one_description"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:textSize="@dimen/TitleSize"
                    />

                <RelativeLayout
                    android:id="@+id/circle_green_number_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_green"
                    android:clickable="true"
                    android:gravity="right"
                    android:layout_marginLeft="25dp"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/img_number_one"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="10dp"
                        android:src="@drawable/number_1" />

                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/divider_register"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/divider_register"
                android:layout_below="@id/fragment_register_one_row_one"/>

            <RelativeLayout
                android:id="@+id/content_register_rows"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/divider_register">

                <LinearLayout
                    android:id="@+id/fragment_register_one_row_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Tipo de Documento"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <Spinner
                        android:id="@+id/fragment_register_one_document_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner"
                        android:padding="10dp"
                        android:drawSelectorOnTop="true"

                        ></Spinner>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_one_row_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_register_one_row_two"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    >
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="NÂº Documento"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <com.itosoftware.inderandroid.graphicstest.FontEditText
                        android:id="@+id/fragment_register_one_num_document"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="@string/step_one_document"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:background="@drawable/rounded_stroke"
                        android:padding="10dp"
                        android:maxLength="20"
                        android:textSize="@dimen/ContentSize"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_one_row_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_register_one_row_three"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    >
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/step_one_name_one"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <com.itosoftware.inderandroid.graphicstest.FontEditText
                        android:id="@+id/fragment_register_one_name_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="@string/step_one_name_one"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:background="@drawable/rounded_stroke"
                        android:padding="10dp"
                        android:maxLength="20"
                        android:textSize="@dimen/ContentSize"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_one_row_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_register_one_row_four"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    >
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/step_one_name_two"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <com.itosoftware.inderandroid.graphicstest.FontEditText
                        android:id="@+id/fragment_register_one_name_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="@string/step_one_name_two"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:maxLength="20"
                        android:background="@drawable/rounded_stroke"
                        android:padding="10dp"
                        android:textSize="@dimen/ContentSize"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_one_row_six"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_register_one_row_five"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    >
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/step_one_last_name_one"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <com.itosoftware.inderandroid.graphicstest.FontEditText
                        android:id="@+id/fragment_register_one_last_name_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="@string/step_one_last_name_one"
                        android:maxLength="20"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:background="@drawable/rounded_stroke"
                        android:padding="10dp"
                        android:textSize="@dimen/ContentSize"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_one_row_seven"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_register_one_row_six"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    >
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/step_one_last_name_two"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <com.itosoftware.inderandroid.graphicstest.FontEditText
                        android:id="@+id/fragment_register_one_last_name_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="@string/step_one_last_name_two"
                        android:maxLength="20"
                        android:inputType="text"
                        android:imeOptions="actionNone"
                        android:background="@drawable/rounded_stroke"
                        android:padding="10dp"
                        android:textSize="@dimen/ContentSize"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_one_row_eight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_register_one_row_seven"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    >
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/button_pick_born_date"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <com.itosoftware.inderandroid.graphicstest.FontButton
                        android:id="@+id/fragment_register_one_born_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/button_pick_born_date"
                        android:onClick="showDatePickerDialog"
                        android:background="@drawable/rounded_verde"
                        android:padding="10dp"
                        android:textSize="@dimen/ContentSize"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_one_row_nine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_register_one_row_eight">
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Sexo"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <Spinner
                        android:id="@+id/fragment_register_one_sex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner"
                        android:padding="10dp"
                        ></Spinner>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_one_row_ten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_register_one_row_nine">
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Etnia"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <Spinner
                        android:id="@+id/fragment_register_one_etnia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner"
                        android:padding="10dp"
                        ></Spinner>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_one_row_eleven"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_register_one_row_ten">
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Desplazado"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <Spinner
                        android:id="@+id/fragment_register_one_displaced"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner"
                        android:padding="10dp"
                        ></Spinner>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_one_row_twelve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_register_one_row_eleven">
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Tipo Desplazado"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <LinearLayout
                            android:id="@+id/fragment_register_one_row_twelve_row_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusableInTouchMode="true"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">
                            <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="Declarante"
                                android:layout_weight="1"
                                android:textSize="@dimen/ContentSize"
                                />
                            <com.itosoftware.inderandroid.graphicstest.FontCheckbox
                                android:id="@+id/fragment_register_one_declarant"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:gravity="right"
                                android:textSize="@dimen/DateSize"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/fragment_register_one_row_twelve_row_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusableInTouchMode="true"
                            android:layout_below="@+id/fragment_register_one_row_twelve_row_one"
                            android:orientation="horizontal">
                            <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="Declarante con reconocimiento"
                                android:layout_weight="1"
                                android:textSize="@dimen/ContentSize"
                                />
                            <com.itosoftware.inderandroid.graphicstest.FontCheckbox
                                android:id="@+id/fragment_register_one_recognition"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:gravity="right"
                                android:textSize="@dimen/DateSize"
                                />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_one_row_thirteen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_register_one_row_twelve">
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Discapacitado"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <Spinner
                        android:id="@+id/fragment_register_one_handicapped"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner"
                        android:padding="10dp"
                        ></Spinner>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_one_row_fourteen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_register_one_row_thirteen">
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Tipo Discapacidad"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <com.itosoftware.inderandroid.graphicstest.MultiSpinner
                        android:id="@+id/fragment_register_one_type_handicapped"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner"
                        android:padding="10dp"
                        ></com.itosoftware.inderandroid.graphicstest.MultiSpinner>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_one_row_fiveteen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_register_one_row_fourteen">
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Subtipo Discapacidad"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <com.itosoftware.inderandroid.graphicstest.MultiSpinner
                        android:id="@+id/fragment_register_one_subtype_handicapped"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner"
                        android:padding="10dp"
                        ></com.itosoftware.inderandroid.graphicstest.MultiSpinner>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_one_row_sixteen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="25dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_register_one_row_fiveteen">

                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Jefe Cabeza de Familia"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <Spinner
                        android:id="@+id/fragment_register_one_boss_head_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner"
                        android:padding="10dp"
                        ></Spinner>
                </LinearLayout>
                <Button
                    android:id="@+id/fragment_register_one_button_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/fragment_register_one_row_sixteen"
                    android:text="@string/button_next"
                    android:background="@drawable/rounded_verde"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/Blanco"
                    android:textSize="@dimen/TitleSize"/>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/fragment_register_one_progress_bar"
        android:background="@drawable/progress_animation"
        android:layout_width="50dp"
        android:layout_centerInParent="true"
        android:layout_height="50dp" />

</RelativeLayout>