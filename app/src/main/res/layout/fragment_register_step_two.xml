<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blanco">


    <!-- Scrollable Item above footer -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/fragment_register_two_row_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="50dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingBottom="20dp"
                android:background="@color/Blanco">

                <RelativeLayout
                    android:id="@+id/circle_white_number_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_green"
                    android:gravity="center_horizontal"
                    android:clickable="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img_number_two"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:src="@drawable/number_2" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/divider_register"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/divider_register"
                android:layout_below="@id/fragment_register_two_row_one"/>

            <RelativeLayout
                android:id="@+id/content_register_rows"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/divider_register">


                <LinearLayout
                    android:id="@+id/fragment_register_two_row_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    >
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="País"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <Spinner
                        android:id="@+id/fragment_register_two_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner"
                        android:padding="10dp"
                        ></Spinner>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_two_row_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_register_two_row_two">

                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Departamento"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <Spinner
                        android:id="@+id/fragment_register_two_department"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner"
                        android:padding="10dp"
                        ></Spinner>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_two_row_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_register_two_row_three">

                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Ciudad"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <Spinner
                        android:id="@+id/fragment_register_two_town"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner"
                        android:padding="10dp"
                        ></Spinner>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_two_row_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_register_two_row_four">
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Zona"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <Spinner
                        android:id="@+id/fragment_register_two_zone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner"
                        android:padding="10dp"
                        ></Spinner>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_two_row_six"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_register_two_row_five">
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Comuna"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <Spinner
                        android:id="@+id/fragment_register_two_commune"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner"
                        android:padding="10dp"
                        ></Spinner>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_two_row_seven"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_register_two_row_six">
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Barrio"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <Spinner
                        android:id="@+id/fragment_register_two_neighborhood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner"
                        android:padding="10dp"
                        ></Spinner>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_two_row_eight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_register_two_row_seven">
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Estrato"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <Spinner
                        android:id="@+id/fragment_register_two_stratum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner"
                        android:padding="10dp"
                        ></Spinner>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_two_row_eight_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_register_two_row_eight">
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Dirección"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <com.itosoftware.inderandroid.graphicstest.FontButton
                    android:id="@+id/fragment_register_two_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dirección"
                    android:background="@drawable/rounded"
                    android:padding="10dp"
                    android:textSize="@dimen/ContentSize"
                    />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_two_row_nine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_register_two_row_eight_two">
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/step_two_phone"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <com.itosoftware.inderandroid.graphicstest.FontEditText
                        android:id="@+id/fragment_register_two_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLength="20"
                        android:hint="@string/step_two_phone"
                        android:inputType="number"
                        android:imeOptions="actionNone"
                        android:background="@drawable/rounded_stroke"
                        android:padding="10dp"
                        android:textSize="@dimen/ContentSize"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_two_row_ten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_register_two_row_nine">
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/step_two_optional_phone"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <com.itosoftware.inderandroid.graphicstest.FontEditText
                        android:id="@+id/fragment_register_two_phone_optional"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLength="20"
                        android:hint="@string/step_two_optional_phone"
                        android:inputType="number"
                        android:imeOptions="actionNone"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_stroke"
                        android:padding="10dp"
                        android:textSize="@dimen/ContentSize"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_register_two_row_eleven"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="25dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/fragment_register_two_row_ten">
                    <com.itosoftware.inderandroid.graphicstest.FontTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/step_two_celphone"
                        android:layout_weight="2"
                        android:textSize="@dimen/ContentSize"
                        android:paddingBottom="10dp"
                        />
                    <com.itosoftware.inderandroid.graphicstest.FontEditText
                        android:id="@+id/fragment_register_two_celphone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="@string/step_two_celphone"
                        android:maxLength="20"
                        android:inputType="number"
                        android:imeOptions="actionNone"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_stroke"
                        android:padding="10dp"
                        android:textSize="@dimen/ContentSize"
                        />
                </LinearLayout>
                <Button
                    android:id="@+id/fragment_register_two_button_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/fragment_register_two_row_eleven"
                    android:text="@string/button_next"
                    android:background="@drawable/rounded_verde"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/Blanco"
                    android:textSize="@dimen/TitleSize"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/fragment_register_two_progress_bar"
        android:background="@drawable/progress_animation"
        android:layout_width="50dp"
        android:layout_centerInParent="true"
        android:layout_height="50dp" />
</RelativeLayout>