        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="boton_upload_file_pqrs" parent="@android:style/Widget.Button">
        <item name="android:drawableTop">@drawable/upload_file</item>
        <item name="android:background">@color/Transparente</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/GrisTextos</item>
        <item name="android:typeface">sans</item>
        <item name="android:paddingTop">5dp</item>
