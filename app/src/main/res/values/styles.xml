<resources>

    <style name="boton_register_pqrs" parent="@android:style/Widget.Button">
        <item name="android:drawableTop">@drawable/register_pqrs</item>
        <item name="android:background">@color/GrisClaro</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/GrisTextos</item>
        <item name="android:typeface">sans</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="boton_tracing_pqrs" parent="@android:style/Widget.Button">
        <item name="android:drawableTop">@drawable/tracing_pqrs</item>
        <item name="android:background">@color/GrisClaro</item>
        <item name="android:layout_width">fill_parent</item>
