    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Verde</item>
        <item name="actionBarTabStyle">@style/TabBarStyle</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <!-- <item name="colorPrimaryDark">@color/Verde</item> -->
    </style>
    <style name="SectionTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:padding">2dip</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/TitleSize</item>
    </style>
    <style name="SectionItemStyle">
        <item name="android:padding">2dip</item>
        <item name="android:background">#80000000</item>
    </style>
    <style name="ListTextViewStyle" parent="@android:style/TextAppearance">
        <item name="android:padding">10dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">@dimen/ContentSize</item>
    </style>
    <style name="ListItemStyle">
        <item name="android:padding">2dip</item>
        <item name="android:background">#80000000</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:padding">2dip</item>
    </style>
    <!-- configure your real custom style for the tab bar-->
    <style name="TabBarStyle" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@color/Blanco</item>
    </style>

